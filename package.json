{
  "name": "arduino-shift-light-display",
  "version": "1.0.0",
  "description": "Arduino-based shift light display for racing simulators",
  "private": true,
  "author": "",
  "license": "MIT",
  "keywords": [
    "arduino",
    "racing",
    "simulator",
    "telemetry",
    "shift-light"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run copy-files",
    "copy-files": "cp SMS_UDP_Definitions.hpp dist/ && cp .env.example dist/",
    "start": "node dist/index.js",
    "start:dev": "tsx src/index.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "binary-parser": "^2.3.0",
    "dotenv": "^16.6.1",
    "johnny-five": "^2.1.0"
  },
  "devDependencies": {
    "@types/binary-parser": "^1.5.5",
    "@types/johnny-five": "^2.1.11",
    "@types/node": "^22.10.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
